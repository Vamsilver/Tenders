@inject NavigationManager Manager

<div class="alert alert-secondary mt-4">
    <span class="oi oi-pencil me-2" aria-hidden="true"></span>
    <strong>@Title</strong>

    <span class="text-nowrap">
        Use your 
        <a target="_blank" class="font-weight-bold link-dark" @onclick="NavigateToProfile">profile</a>
        to login. If you don't have an account yet, you can 
        <a target="_blank" class="font-weight-bold link-dark" @onclick="NavigateToRegister">register</a>
        .
    </span>
</div>

@code {
    // Demonstrates how a parent component can supply parameters
    [Parameter]
    public string? Title { get; set; }

    public void NavigateToProfile()
    {
        Manager.NavigateTo("/authorization");
    }
    
    public void NavigateToRegister()
    {
        Manager.NavigateTo("/register");
    }
}